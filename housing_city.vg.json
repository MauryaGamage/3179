{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Global Cost of Living (2022)",
    "width": 800,
    "height": 400,

    "projection": {"type": "equirectangular"},
    "params": [
    {
      "name": "countrySelection",
      "value": "All Countries",
      "bind": {
        "input": "select",
        "options": ["All Countries", "India", "Australia", "Country 3"],
        "name": "Select Country"
      }
    }
  ],
    "layer": [
      {
        "data": {
          "graticule": {
            "step": [
              30,
              30
            ]
          }
        },
        "mark": {
          "type": "geoshape"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
      },


      {
        
        "data": {
          "url": "https://raw.githubusercontent.com/MauryaHG/cost-living-data/main/ne_110m_populated_places.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_populated_places"}
        },
        "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "cost-of-living.csv"
          },
          "key": "city",
          "fields": ["x48"]
        }
      },
      {
        "window": [{"op": "rank", "as": "ranking"}],
        "sort": [{"field": "x48", "order": "descending"}]
      },
      {
        "filter": "datum.ranking <= 11"
      },
      

      {"calculate": "datum.x48", "as": "Apartment Cost"}
    ],
    
    "mark": {"type": "geoshape" },
    "encoding": {
      "color": {
        "title": "Apartment (1 bedroom) in City Centre",
        "field": "Apartment Cost",
        "type": "quantitative",
        "scale": {"type": "linear", "scheme": "reds"}
        
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "City"},
        {"field": "Apartment Cost", "type": "quantitative"}
      ]
    }
      }
    ]
  }